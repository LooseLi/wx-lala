page {
  background-color: #f2f4f5;
}

.wrap {
  padding: 50px 12px 0;
}

.things-wrap {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.things {
  width: calc((100% - 24px) / 3);
  height: 140px;
  padding: 6px;
  text-align: center;
  border-radius: 4px;
  background: #fff;
  box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
  margin-right: 12px;
  margin-bottom: 12px;
}

.things:nth-child(3n) {
  margin-right: 0;
}

.picture {
  width: 100%;
  height: 100px;
  margin-bottom: 8px;
}

.no-picture{
  width: 100%;
  height: 100px;
  margin-bottom: 8px;
  padding: 24px;
  background: #fafafa;
}

image {
  width: 100%;
  height: 100%;
}

text {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.6);
}