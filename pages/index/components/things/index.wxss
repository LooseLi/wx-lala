page {
  background-color: #f2f4f5;
}

.wrap {
  padding: 50px 12px 0;
}

.weui-half-screen-dialog_large {
  top: 200px;
  background-color: #f0f0f0;
}

.weui-half-screen-dialog__bd {
  padding-bottom: 0;
}

.weui-half-screen-dialog__ft {
  padding: 0;
}


.weui-cell::before {
  border-top: none;
}

.weui-cell {
  text-align: center;
  padding: 12px;
}

.upload-bg {
  width: 300px;
  height: 300px;
  margin: 50px auto 30px;
  border-radius: 12px;
  box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-add {
  width: 100px;
  height: 100px;
}

.icon-add-image {
  width: 100%;
  height: 100%;
}

.add-tips {
  margin-top: 12px;
  font-size: 14px;
  color: #ffadd2;
}

.dialog-name {
  font-size: 16px;
  text-align: center;
  font-weight: 500;
}

.things-wrap {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.things {
  width: calc((100% - 24px) / 3);
  height: 140px;
  padding: 6px;
  text-align: center;
  border-radius: 4px;
  background: #fff;
  box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
  margin-right: 12px;
  margin-bottom: 12px;
}

.things:nth-child(3n) {
  margin-right: 0;
}

.picture {
  width: 100%;
  height: 100px;
  margin-bottom: 8px;
}

.no-picture {
  width: 100%;
  height: 100px;
  margin-bottom: 8px;
  padding: 24px;
  background: #fafafa;
}

image {
  width: 100%;
  height: 100%;
}

text {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.6);
}

.cropper-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #000;
  /* z-index: 9999; */
}

.button-cropper-image {
  color: #fff;
}