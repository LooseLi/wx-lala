/* 公告组件样式 */
.announcement-container {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  margin-bottom: 20px;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.announcement-swiper {
  height: 80rpx;
  width: 100%;
}

.announcement-item {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 100%;
  background-color: rgba(245, 245, 245, 0.8);
}

/* 移除了所有类型特定的样式，完全依靠图标区分 */

.announcement-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.announcement-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}
