/* 公告组件样式 */
.announcement-container {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  margin-bottom: 20px;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.announcement-swiper {
  height: 80rpx;
  width: 100%;
}

.announcement-item {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 100%;
  background-color: rgba(245, 245, 245, 0.8);
  border-left: 2px solid transparent;
}

.announcement-item.weather {
  border-left-color: #ffcc00;
}

.announcement-item.anniversary {
  border-left-color: #ff6b8b;
}

.announcement-item.countdown {
  border-left-color: #409eff;
}

.announcement-item.todo {
  border-left-color: #5fba7d;
}

.announcement-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.announcement-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}
