page {
  background-color: #f2f2f7;
  font-family: -apple-system, 'SF Pro', 'Helvetica Neue', sans-serif;
  color: #000000;
  font-size: 14px;
  line-height: 1.4;
  padding-bottom: 20px;
  padding-top: 44px;
  /* 为导航栏预留空间 */
}

.weui-half-screen-dialog_large {
  top: auto;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  overflow: hidden;
  background-color: #f2f2f7;
}

.weui-half-screen-dialog__hd {
  display: flex;
  align-items: center;
  padding: 8px 24px;
  position: relative;
}

.wrap {
  margin-top: 0;
}

/* 对话框标题样式 */
.weui-half-screen-dialog__hd__side {
  position: absolute;
  left: 8px;
  top: 50%;
  transform: translateY(-50%);
}

.ios-close-btn {
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 14px;
  background-color: rgba(0, 0, 0, 0.1);
  position: relative;
}

.ios-close-icon {
  position: absolute;
  top: 50%;
  /* 置于垂直中心偏上一点 */
  left: 50%;
  right: 0;
  font-size: 20px;
  color: #666;
  text-align: center;
  line-height: 1;
  transform: translate(-50%, -50%);
  /* 微调垂直位置 */
}

.weui-half-screen-dialog__hd__main {
  display: flex;
  justify-content: center;
  width: 100%;
}

.weui-half-screen-dialog__title {
  font-size: 17px;
  font-weight: 600;
  color: #000;
  text-align: center;
}

/* 对话框输入框样式 */
.weui-cell {
  background-color: #ffffff;
  border-radius: 10px;
  margin: 8px 16px;
  padding: 12px 16px;
}

.weui-input {
  height: 24px;
  line-height: 24px;
  font-size: 15px;
}

/* 对话框按钮样式 */
.weui-btn_primary {
  background: linear-gradient(135deg, #36b4ff, #1e90ff);
  border-radius: 10px;
  font-size: 16px;
  font-weight: 500;
  height: 44px;
  line-height: 44px;
  margin: 16px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 关闭按钮样式 */
.ios-close-btn {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background-color: #e5e5ea;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 8px;
}

.ios-close-icon {
  font-size: 24px;
  color: #8e8e93;
  line-height: 24px;
}

.holiday-card {
  position: relative;
  width: calc(100% - 32px);
  margin: 0 auto 12px;
  padding: 16px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  z-index: 2;
  font-size: 14px;
  color: #000000;
  overflow: hidden;
}

.title {
  padding: 0 12px;
  margin: 30px 0 5px;
}

.icon-delete {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 8px;
  top: 8px;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  padding: 4px;
  box-sizing: border-box;
}

.icon-holiday {
  width: 40px;
  height: 40px;
  margin-right: 12px;
  border-radius: 8px;
  overflow: hidden;
}

.holiday-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.holiday-left {
  display: flex;
  align-items: center;
}

.holiday-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.countdown-days {
  color: #8e8e93;
  font-size: 13px;
}

.holiday-time {
  font-size: 13px;
  color: #8e8e93;
  margin-top: 4px;
}

.holiday-content {
  color: #8e8e93;
  /* margin-top: 6px; */
  font-size: 13px;
}

/* 祝福语渐变文字样式 */
.greeting-text {
  font-size: 15px;
  font-weight: 500;
  background-image: linear-gradient(to right, #36b4ff, #1e90ff, #5a6cff);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  padding: 4px 0;
  font-style: italic;
  /* 添加斜体样式 */
  /* margin-top: 8px; */
}

/* 淡入动画效果 */
.animate-fade-in {
  animation: fadeIn 1s 500ms ease-out;
  animation-fill-mode: forwards;
  opacity: 0;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(10px);
  }

  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.holiday-name {
  font-weight: 500;
  font-size: 17px;
}

.holiday-name-day {
  color: #36b4ff;
  font-size: 24px;
  font-weight: 600;
  margin: 0 6px;
}

.day-text {
  color: #8e8e93;
  font-size: 13px;
}

.day-prefix {
  color: #8e8e93;
  font-size: 13px;
}

.no-holiday {
  text-align: center;
  padding: 24px 16px;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24px 0;
}

.empty-title {
  font-size: 17px;
  font-weight: 600;
  color: #000;
  margin-bottom: 8px;
}

.empty-subtitle {
  font-size: 13px;
  color: #8e8e93;
  text-align: center;
  max-width: 80%;
}

.section-title {
  font-size: 15px;
  font-weight: 600;
  color: #8e8e93;
  margin: 16px 16px 8px;
}

.holiday-content-wrap {
  flex: 1;
}

/* 简化的添加按钮区域 */
.ios-action-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: transparent;
  z-index: 100;
}

.ios-status-bar {
  height: 20px;
  /* 状态栏高度 */
}

.ios-action-content {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 44px;
  padding: 0 16px;
}

.spacer {
  flex: 1;
}

.ios-add-button {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #36b4ff, #1e90ff);
  border-radius: 18px;
  color: white;
  box-shadow: 0 2px 8px rgba(54, 180, 255, 0.3);
  transition: all 0.2s ease;
}

.ios-add-button:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #2aa0e5, #1880e0);
}

.ios-icon {
  font-size: 24px;
  font-weight: 300;
  line-height: 24px;
}

/* 分段控制器样式 */
.ios-segment-container {
  padding: 16px 16px 8px;
  margin-top: 56px;
  /* 减小与添加按钮的间距 */
}

.ios-segment-control {
  display: flex;
  background-color: #e5e5ea;
  border-radius: 8px;
  overflow: hidden;
  height: 32px;
}

.ios-segment {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  color: #8e8e93;
  transition: all 0.2s ease;
}

.ios-segment-active {
  background-color: #ffffff;
  color: #000000;
  border-radius: 7px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
  margin: 1px;
  font-weight: 500;
}
