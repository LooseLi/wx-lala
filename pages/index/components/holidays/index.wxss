.container {
  padding: 32rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.year-selector {
  display: flex;
  justify-content: center;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin: 0 auto;
  /* width: 80%; */
}

.year-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.year-btn.active {
  color: #007aff;
  font-weight: 500;
}

.year-btn.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #007aff;
  border-radius: 3rpx;
}

/* 月份导航 */
.month-navigator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.nav-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 25rpx;
  /* background-color: #fff; */
  /* box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05); */
}

.nav-icon {
  font-size: 28rpx;
  color: #007aff;
}

.current-month {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin: 0 30rpx;
}

/* 星期头部 */
.weekday-header {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
  margin-bottom: 2rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.weekday-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 日历滑动区域 */
.calendar-swiper {
  height: 600rpx;
  width: 100%;
}

/* 日历网格 */
.calendar-grid {
  background-color: #fff;
  border-radius: 0 0 16rpx 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  height: 100%;
}

.calendar-row {
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
}

.calendar-row:last-child {
  border-bottom: none;
}

.calendar-cell {
  flex: 1;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-right: 1rpx solid #f5f5f5;
  padding: 8rpx 0;
}

.calendar-cell:last-child {
  border-right: none;
}

.other-month {
  opacity: 0.3;
}

.date-text {
  font-size: 32rpx;
  color: #333;
  z-index: 2;
}

/* 农历日期样式 */
.lunar-date {
  font-size: 18rpx;
  color: #888;
  margin-top: -4rpx;
  line-height: 1;
  z-index: 2;
}

/* 自定义节日样式 */
.custom-festival {
  color: #4a90e2; /* 淡蓝色 */
  font-weight: 500;
}

/* 节假日和调休日样式 */
.holiday {
  background-color: #e4f8e9;
}

.workday {
  background-color: #ffebe6;
}

/* 连续假期样式 */
.first-day {
  border-radius: 0;
}

.middle-day {
  border-radius: 0;
}

.last-day {
  border-radius: 0;
}

/* 单独一天的假期 */
.first-day.last-day {
  border-radius: 0;
}

/* 假期标记 */
.holiday-tag {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  font-size: 20rpx;
  color: #34c759;
  font-weight: bold;
  z-index: 2;
}

/* 调休标记 */
.workday-tag {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  font-size: 20rpx;
  color: #ff3b30;
  font-weight: bold;
  z-index: 2;
}

/* 今天和选中日期的样式 */
.today {
  position: relative;
}

.today::after {
  content: '';
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  background-color: #007aff;
  z-index: 1;
}

.today .date-text {
  color: #fff;
  font-weight: 500;
  z-index: 2;
}

.today .lunar-date {
  color: #fff;
  z-index: 2;
}

.selected {
  position: relative;
}

.selected::after {
  content: '';
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  border: 2rpx solid #007aff;
  box-sizing: border-box;
  z-index: 1;
}

/* 选中日期信息 */
.selected-date-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.date-header {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lunar-info {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.selected-date {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.holiday-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.holiday-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.holiday-type {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.holiday-type {
  background-color: #e4f8e9;
  color: #34c759;
}

.workday-type {
  background-color: #ffebe6;
  color: #ff3b30;
}

.no-holiday {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 20rpx 0;
}

/* 自定义节日详情 */
.festival-details {
  padding: 20rpx 30rpx;
  text-align: center;
}

.festival-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.festival-tips {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.legend-marker {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.holiday-marker {
  background-color: #34c759;
}

.workday-marker {
  background-color: #ff3b30;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

/* 底部 */
.footer {
  text-align: center;
  margin-top: 20rpx;
}

.tips {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}
