page {
  background-color: var(--background-primary);
  font-family: -apple-system, 'SF Pro', 'Helvetica Neue', sans-serif;
  color: var(--text-primary);
  font-size: 14px;
  line-height: 1.4;
  padding-bottom: 20px;
  padding-top: 44px; /* 为导航栏预留空间 */
}

/* iOS风格的弹出对话框 */
.weui-half-screen-dialog_large {
  top: auto;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  overflow: hidden;
  background-color: var(--background-primary);
}

.weui-half-screen-dialog__hd {
  display: flex;
  align-items: center;
  padding: 8px 24px;
  position: relative;
}

.wrap {
  margin-top: 0;
}

/* iOS风格的操作栏 */
.ios-action-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: var(--background-primary);
  z-index: 1000;
}

.ios-status-bar {
  height: 20px; /* 状态栏高度 */
}

.ios-action-content {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 44px;
  padding: 0 16px;
}

.spacer {
  flex: 1;
}

.ios-add-button {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-gradient);
  border-radius: 18px;
  color: white;
  box-shadow: 0 2px 8px rgba(var(--primary-color-rgb), 0.3);
  transition: all 0.2s ease;
}

.ios-add-button:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.ios-icon {
  font-size: 24px;
  font-weight: 300;
  line-height: 24px;
}

/* 纪念日列表样式 */
.anniversary-list {
  width: calc(100% - 32px);
  margin: 16px auto 0;
  padding-top: 50px; /* 为操作栏预留空间 */
}

.anniversary-card {
  position: relative;
  width: 100%;
  background: var(--background-secondary);
  border-radius: 12px;
  box-shadow: var(--card-shadow);
  margin-bottom: 16px;
  padding: 16px;
  overflow: hidden;
  border: 1rpx solid var(--border-color);
}

.anniversary-content {
  display: flex;
  flex-direction: column;
}

.anniversary-title {
  font-size: 16px;
  font-weight: normal;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.anniversary-date {
  font-size: 13px;
  font-weight: normal;
  color: var(--text-secondary);
  margin-bottom: 6px;
}

.anniversary-days {
  font-size: 13px;
  color: var(--text-secondary);
}

.anniversary-days text {
  font-size: 20px;
  font-weight: 500;
  color: #ff6b8b;
  margin-right: 4px;
}

/* 纪念日图片图标样式 */
.anniversary-images-icon {
  display: flex;
  align-items: center;
  margin-top: 6px;
  color: var(--primary-color);
}

.images-count {
  font-size: 13px;
  margin-right: 4px;
  color: var(--text-secondary);
}

.images-icon {
  font-size: 16px;
}

/* 删除按钮样式 */
.ios-delete-button {
  position: absolute;
  right: 8px;
  top: 8px;
  width: 24px;
  height: 24px;
  border-radius: 12px;
  background-color: rgba(var(--error-color-rgb), 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

/* 关闭按钮样式 */
.ios-close-btn {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background-color: rgba(var(--text-secondary-rgb), 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 8px;
}

.ios-close-icon {
  font-size: 24px;
  color: var(--text-secondary);
  line-height: 24px;
}

.ios-delete-icon {
  font-size: 18px;
  color: #ffffff;
  line-height: 18px;
}

/* 对话框标题样式 */
.weui-half-screen-dialog__hd__side {
  position: absolute;
  left: 8px;
  top: 50%;
  transform: translateY(-50%);
}

.weui-half-screen-dialog__hd__main {
  display: flex;
  justify-content: center;
  width: 100%;
}

.weui-half-screen-dialog__title {
  font-size: 17px;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
}

/* 表单样式 */
.weui-half-screen-dialog__bd {
  padding: 16px;
}

.ios-form-group {
  background-color: var(--background-secondary);
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 16px;
  border: 0.5px solid var(--border-color);
}

.ios-form-item {
  padding: 12px 16px;
  border-bottom: 0.5px solid var(--border-color);
}

.ios-form-item:last-child {
  border-bottom: none;
}

.ios-input {
  height: 24px;
  line-height: 24px;
  font-size: 15px;
  width: 100%;
  color: var(--text-primary);
}

.ios-input-placeholder {
  color: var(--text-tertiary);
}

/* 图片上传区域样式 */
.image-upload-title {
  font-size: 15px;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.image-preview-area {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -4px;
}

.image-preview-item {
  position: relative;
  width: calc(33.333% - 8px);
  margin: 4px;
  height: 80px;
  border-radius: 8px;
  overflow: hidden;
  background-color: #f2f2f7;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image-btn {
  position: absolute;
  right: 4px;
  top: 4px;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.image-upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  background: var(--primary-gradient);
  border-radius: 8px;
  color: white;
  margin-bottom: 8px;
}

.upload-icon {
  font-size: 20px;
  margin-right: 6px;
}

.upload-text {
  font-size: 15px;
}

.image-tip {
  font-size: 12px;
  color: var(--text-tertiary);
  text-align: center;
}

/* 日期选择器样式适配 */
.date-picker {
  width: 100%;
}

/* 确保日期选择器内部文字颜色与主题一致 */
.date-picker-text {
  color: var(--text-primary) !important;
}

/* 按钮样式 */
.ios-button {
  border-radius: 10px;
  font-size: 16px;
  font-weight: 500;
  height: 44px;
  line-height: 44px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16px;
}

.ios-button-primary {
  background: var(--primary-gradient);
  color: #ffffff;
}

.ios-button-primary:active {
  opacity: 0.8;
}
