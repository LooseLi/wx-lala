page {
  background-color: #f2f4f5;
}

.weui-half-screen-dialog_large {
  top: 200px;
}

.wrap {
  margin: 40px 0 0;
}

.add-wrap {
  width: 100%;
  text-align: right;
  padding: 0 12px;
  margin-bottom: 10px;
}

.add-wrap>image {
  width: 24px;
  height: 24px;
}

.anniversary-list {
  width: calc(100% - 24px);
  margin: 0 auto;
}

.anniversary {
  width: 100%;
  background: #fff;
  box-shadow: 0px 0px 1px rgba(23, 22, 81, 0.1);
  border-radius: 6px;
  margin-bottom: 16px;
  padding: 20px;
  color: #262626;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.anniversary>.left>view:first-child {
  font-size: 14px;
}

.anniversary>.right>text {
  font-size: 18px;
  color: #ff6800;
}