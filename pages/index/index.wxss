page {
  background: linear-gradient(270deg, #91d5ff 0%, #ffffff 100%);
  /* background: #e6f7ff; */
}

.container {
  width: 100%;
}

.bg {
  width: 100%;
  position: relative;
  z-index: 1;
}

.weather-card {
  position: relative;
  width: calc(100% - 24px);
  margin: -70px auto 20px;
  padding: 12px;
  /* background: rgba(230, 247, 255, 0.5); */
  background: rgba(0, 0, 0, 0.45);
  box-shadow: 1px 1px 6px #595959;
  border-radius: 12px;
  text-align: center;
  z-index: 2;
  font-size: 14px;
  color: #fafafa;
  font-family: 'Courier New', Courier, monospace;
}

.location {
  display: flex;
  align-items: center;
  margin-top: 6px;
}

.icon-dingwei {
  width: 26px;
  height: 26px;
  margin-right: 4px;
}

.temperature {
  font-size: 48px;
  padding: 14px 0;
}

.wrap {
  display: flex;
  justify-content: center;
  align-items: center;
}

.line {
  margin: 0 6px;
}

.wind {
  margin: 6px 0;
}

.windpower {
  margin-right: 20px;
}

.icon-weather {
  width: 36px;
  height: 36px;
  margin-right: 6px;
}

.weather {
  display: flex;
  align-items: center;
}

.meet {
  background: linear-gradient(90deg, #ffa940 20%, #85a5ff 76%);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  font-size: 16px;
}

.holiday-card {
  position: relative;
  width: calc(100% - 24px);
  margin: 0 auto 12px;
  padding: 12px;
  background: rgba(230, 247, 255, 0.5);
  box-shadow: 1px 1px 6px #d9d9d9;
  border-radius: 12px;
  z-index: 2;
  font-size: 14px;
  color: #262626;
  font-family: 'Courier New', Courier, monospace;
}

.icon-holiday {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.holiday-wrap {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.holiday-time {
  margin-top: 4px;
}

.holiday-content {
  color: #ffa39e;
}

.holiday-name {
  color: #ff6800;
  text-decoration: underline;
}

.holiday-name-day {
  color: #ff6800;
  font-size: 24px;
}

.no-holiday {
  text-align: center;
}