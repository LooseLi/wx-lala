<view class="container">
	<image class="bg" src="./images/bg.jpeg" mode="widthFix" />
	<view class="card" wx:if="{{isShowMeet}}">
		<text class="meet">{{meetContent}}</text>
	</view>

	<!-- 天气 -->
	<view class="weather-card">
		<block wx:if="{{hasAuth}}">
			<view class="location">
				<image class="icon-dingwei" src="./images/dingwei.png"></image>
				<view>{{today.province}}-{{today.city}}</view>
			</view>
			<view class="temperature">{{today.temperature}}º</view>
			<view class="wrap">
				<view class="info weather">
					<image bindtap="handleTips" class="icon-weather" src="{{today.icon}}"></image>
					<view>{{today.weather}}</view>
				</view>
				<view class="info line">|</view>
				<view class="info">湿度：{{today.humidity}}%</view>
			</view>
			<view class="wrap wind">
				<view class="info windpower">风力：{{today.windpower}} 级</view>
				<view class="info">风向：{{today.winddirection}}风</view>
			</view>
		</block>
		<view wx:else bindtap="handleNoAuth">
			<image class="noAuth" src="./images/noAuth.png" mode="aspectFit" lazy-load />
		</view>
	</view>

	<!-- 当前节假日 -->
	<view class="holiday-card" wx:if="{{nowHoliday}}">
		<view class="holiday-wrap">
			<image wx:if="{{nowHoliday.index === 0}}" class="icon-holiday" src="./images/holiday/icon-0.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 1}}" class="icon-holiday" src="./images/holiday/icon-1.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 2}}" class="icon-holiday" src="./images/holiday/icon-2.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 3}}" class="icon-holiday" src="./images/holiday/icon-3.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 4}}" class="icon-holiday" src="./images/holiday/icon-4.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 5}}" class="icon-holiday" src="./images/holiday/icon-5.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 6}}" class="icon-holiday" src="./images/holiday/icon-6.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 7}}" class="icon-holiday" src="./images/holiday/icon-7.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 8}}" class="icon-holiday" src="./images/holiday/icon-8.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 9}}" class="icon-holiday" src="./images/holiday/icon-9.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 10}}" class="icon-holiday" src="./images/holiday/icon-10.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 11}}" class="icon-holiday" src="./images/holiday/icon-11.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 12}}" class="icon-holiday" src="./images/holiday/icon-12.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 13}}" class="icon-holiday" src="./images/holiday/icon-13.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<image wx:if="{{nowHoliday.index === 14}}" class="icon-holiday" src="./images/holiday/icon-14.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
			<view>
				<view>{{nowHoliday.id}}啦～</view>
				<view wx:if="{{nowHoliday.days === 1}}" class="holiday-time">{{nowHoliday.begin}}</view>
				<view wx:else class="holiday-time">{{nowHoliday.begin}}~{{nowHoliday.end}}</view>
				<view class="holiday-content">{{nowHoliday.content}}</view>
			</view>
		</view>
	</view>
	<view class="holiday-card no-holiday" wx:else>今天不是节假日喔～快看看还剩几天可以过节 👇</view>

	<!-- 下一个节假日倒计时 -->
	<view wx:if="{{nextHoliday.length}}">
		<view class="holiday-card" wx:for="{{nextHoliday}}" wx:key="id">
			<view class="holiday-wrap">
				<view>
					<image wx:if="{{item.index === 0}}" class="icon-holiday" src="./images/holiday/icon-0.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 1}}" class="icon-holiday" src="./images/holiday/icon-1.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 2}}" class="icon-holiday" src="./images/holiday/icon-2.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 3}}" class="icon-holiday" src="./images/holiday/icon-3.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 4}}" class="icon-holiday" src="./images/holiday/icon-4.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 5}}" class="icon-holiday" src="./images/holiday/icon-5.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 6}}" class="icon-holiday" src="./images/holiday/icon-6.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 7}}" class="icon-holiday" src="./images/holiday/icon-7.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 8}}" class="icon-holiday" src="./images/holiday/icon-8.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 9}}" class="icon-holiday" src="./images/holiday/icon-9.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 10}}" class="icon-holiday" src="./images/holiday/icon-10.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 11}}" class="icon-holiday" src="./images/holiday/icon-11.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 12}}" class="icon-holiday" src="./images/holiday/icon-12.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 13}}" class="icon-holiday" src="./images/holiday/icon-13.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
					<image wx:if="{{item.index === 14}}" class="icon-holiday" src="./images/holiday/icon-14.png" mode="aspectFit|aspectFill|widthFix" lazy-load="true" binderror="" bindload="" />
				</view>
				<view>
					<view><text class="holiday-name">{{item.id}}</text>倒计时：<text class="holiday-name-day">{{item.countDown}}</text> 天</view>
					<view wx:if="{{item.days === 1}}" class="holiday-time">{{item.begin}}</view>
					<view wx:else class="holiday-time">{{item.begin}}~{{item.end}}</view>
				</view>
			</view>
		</view>
	</view>
	<view class="holiday-card no-holiday" wx:else>今年已经没有假了～马上也要新的一年啦</view>
</view>