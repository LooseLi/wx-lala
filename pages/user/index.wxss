view {
  width: 100%;
  position: relative;
}

.weui-half-screen-dialog_large {
  top: 300px;
}

.remind-time {
  display: flex;
  align-items: center;
}
.remind-text {
  color: rgba(0, 0, 0, 0.38);
}

.user-wrap {
  width: 100%;
  min-height: 100vh;
  background-color: var(--background-primary);
  padding: 32rpx;
  padding-top: calc(32rpx + env(safe-area-inset-top));
  box-sizing: border-box;
}

.user-info-wrap {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 32rpx;
  background-color: var(--background-secondary);
  border-radius: 24rpx;
  box-shadow: var(--card-shadow);
  border: 1rpx solid var(--border-color);
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
  border-radius: 20rpx;
  overflow: hidden;
  border: 1px solid var(--border-color);
  box-shadow: var(--inset-shadow);
  transition: all 0.2s ease;
}
.avatar-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  transition: transform 0.2s ease;
}
.avatar-container:active {
  transform: scale(0.98);
}
.avatar-container:active .avatar {
  border-color: var(--border-color-active);
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
}

.edit-icon {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(var(--neutral-color-rgb), 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 50%;
  color: var(--text-inverted);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--small-shadow);
  z-index: 1;
  transition: all 0.2s ease;
}
.edit-icon:active {
  transform: scale(0.95);
  background: rgba(var(--neutral-color-rgb), 0.8);
}

.nickname {
  font-size: 34rpx;
  font-weight: 500;
  color: var(--text-primary);
}
.nickname-container {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 4rpx 0;
}
.nickname-container:active {
  opacity: 0.7;
}
.nickname-container:active .edit-icon {
  transform: scale(0.9);
}
.nickname-container .edit-icon {
  position: relative;
  margin-left: 16rpx;
  width: 32rpx;
  height: 32rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: var(--primary-color);
  font-size: 20rpx;
  transition: all 0.2s ease;
  opacity: 0.85;
  background: none;
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
  box-shadow: none;
  transform: translateY(2rpx);
}

.edit-dialog {
  position: fixed;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}
.edit-dialog.show {
  opacity: 1;
}
.edit-dialog.show .dialog-content {
  transform: scale(1);
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(var(--neutral-color-rgb), 0.4);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
}

.dialog-content {
  position: relative;
  width: 650rpx;
  background: var(--background-secondary);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: var(--modal-shadow);
  transform: scale(1.1);
  transition: transform 0.3s ease;
  z-index: 1;
  border: 1rpx solid var(--border-color);
}
.dialog-header {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: var(--text-primary);
}
.dialog-body {
  padding: 20rpx 30rpx 40rpx;
}
.dialog-body input {
  flex: 1;
  height: 90rpx;
  background: transparent;
  padding: 0 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  color: var(--text-primary);
  border: none;
}
.dialog-footer {
  display: flex;
  border-top: 0.5px solid var(--border-color);
}
.dialog-footer button {
  flex: 1;
  border-radius: 0;
  border: none;
  background: transparent;
  margin: 0;
  padding: 0;
  font-size: 32rpx;
  padding: 24rpx 0;
  line-height: 1.2;
  height: auto;
  position: relative;
}
.dialog-footer button::after {
  border: none;
}
.dialog-footer .cancel-btn {
  color: var(--text-tertiary);
  font-weight: 400;
}
.dialog-footer .confirm-btn {
  color: var(--primary-color);
  font-weight: 500;
}
.dialog-footer .confirm-btn::before {
  content: "";
  position: absolute;
  left: 0;
  top: 15%;
  height: 70%;
  width: 0.5px;
  background: var(--border-color);
}

.input-container {
  display: flex;
  align-items: center;
  margin-top: 5rpx;
  background: var(--input-background);
  border-radius: 14rpx;
  padding: 0 15rpx;
  border: 1rpx solid var(--border-color);
  transition: all 0.2s ease;
  position: relative;
}
.input-container::after {
  content: "";
  position: absolute;
  top: -1rpx;
  left: -1rpx;
  right: -1rpx;
  bottom: -1rpx;
  border-radius: 16rpx;
  pointer-events: none;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}
.input-container:focus-within {
  border-color: transparent;
}
.input-container:focus-within::after {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2rpx rgba(var(--primary-color-rgb), 0.3);
}

.char-counter {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-left: 10rpx;
  white-space: nowrap;
}

.button-hover {
  background-color: var(--button-hover-bg) !important;
  opacity: 0.9;
}

.found {
  width: 100%;
}

.tips {
  text-align: center;
  color: var(--text-secondary);
}

.btn-login {
  margin-top: 30px;
  padding: 0 20px;
}

.ios-button {
  background: linear-gradient(145deg, #3b9bff, #0051ff);
  border-radius: 12px;
  border: none;
  box-shadow: 0 2px 8px rgba(0, 122, 255, 0.15);
  width: 100%;
  height: 44px;
  line-height: 44px;
  padding: 0;
  margin: 0;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}
.ios-button::after {
  border: none;
}
.ios-button-text {
  color: #ffffff;
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 0.5px;
}
.ios-button-hover {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(0, 122, 255, 0.2);
  background: linear-gradient(145deg, #1e8aff, #0045ff);
}