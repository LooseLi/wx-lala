view {
  width: 100%;
  position: relative;
}

.weui-half-screen-dialog_large {
  top: 300px;
}

.remind-time {
  display: flex;
  align-items: center;
}

.remind-text {
  color: rgba(0, 0, 0, 0.38);
}

.user-wrap {
  width: 100%;
  min-height: 100vh;
  background-color: #F2F2F7;
  padding: 32rpx;
  padding-top: calc(32rpx + env(safe-area-inset-top));
  box-sizing: border-box;
}

.user-info-wrap {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  position: relative;
  overflow: hidden;
}

/* 头像区域 */
.avatar-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  transition: transform 0.2s ease;
}

.avatar-container:active {
  transform: scale(0.98);
}

.avatar {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: inset 0 0 1px rgba(0, 0, 0, 0.1);
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
}

/* 编辑图标 */
.edit-icon {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
  transition: all 0.2s ease;
}

.edit-icon:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.6);
}

/* 昵称区域 */
.nickname-container {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 4rpx 0;
}

.nickname {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
}

.nickname-container .edit-icon {
  position: relative;
  margin-left: 16rpx;
  width: 32rpx;
  height: 32rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: #007AFF;
  font-size: 20rpx;
  transition: all 0.2s ease;
  opacity: 0.85;
  background: none;
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
  box-shadow: none;
  transform: translateY(2rpx);
}

.nickname-container:active {
  opacity: 0.7;
}

.nickname-container:active .edit-icon {
  transform: scale(0.9);
}

/* 编辑弹窗 */
.edit-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.dialog-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.dialog-header {
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.dialog-body {
  padding: 30rpx;
}

.dialog-body input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.dialog-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.dialog-footer button {
  flex: 1;
  border-radius: 0;
  border: none;
}

.found {
  width: 100%;
}

.tips {
  text-align: center;
  color: #434343;
}