view {
  width: 100%;
  position: relative;
}

.weui-half-screen-dialog_large {
  top: 300px;
}

.remind-time {
  display: flex;
  align-items: center;
}

.remind-text {
  color: rgba(0, 0, 0, 0.38);
}

.user-wrap {
  width: 100%;
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 20rpx;
  box-sizing: border-box;
}

.user-info-wrap {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}

.user-info {
  flex: 1;
  margin-left: 16px;
}

.found {
  width: 100%;
}

.tips {
  text-align: center;
  color: #434343;
}