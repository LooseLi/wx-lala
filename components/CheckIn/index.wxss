.check-in-container {
  width: 100%;
  /* padding: 32rpx; */
  box-sizing: border-box;
}

.check-in-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  min-width: 160rpx;
}

.check-in-info {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.continuous-days,
.points-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.streak-dates {
  font-size: 24rpx;
  color: #86868B;
  margin-top: 8rpx;
  font-family: -apple-system, 'SF Pro Text';
}

.days-number,
.points-number {
  font-size: 56rpx;
  font-weight: 600;
  color: #1D1D1F;
  line-height: 1.1;
  font-family: -apple-system, 'SF Pro Display';
}

.days-text,
.points-text {
  font-size: 28rpx;
  color: #86868B;
  font-family: -apple-system, 'SF Pro Text';
}

.check-in-button {
  background: linear-gradient(135deg, #0A84FF 0%, #007AFF 100%);
  color: white;
  padding: 20rpx 0;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-family: -apple-system, 'SF Pro Text';
  position: relative;
  overflow: hidden;
  text-align: center;
  width: 100%;
}

.check-in-button::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transition: opacity 0.3s;
}

.check-in-button:active::after {
  opacity: 1;
}

.check-in-button.checked {
  background: linear-gradient(135deg, #32D74B 0%, #28CD41 100%);
}

@keyframes scaleIn {
  0% {
    transform: scale(0.95);
    opacity: 0.5;
  }

  50% {
    transform: scale(1.02);
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.check-in-button.checked {
  animation: scaleIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 补签按钮 */
.makeup-button {
  background: rgba(255, 149, 0, 0.1);
  color: #FF9500;
  padding: 20rpx 0;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-family: -apple-system, 'SF Pro Text';
  text-align: center;
  width: 100%;
}

.makeup-button:active {
  background: rgba(255, 149, 0, 0.2);
}

/* 补签弹窗 */
.makeup-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(8px);
}

.dialog-content {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  max-height: 90vh;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.12);
  animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

@keyframes slideUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.dialog-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
  display: block;
  margin-bottom: 8rpx;
}

.dialog-subtitle {
  font-size: 28rpx;
  color: #86868B;
}

/* 补签确认区域 */
.makeup-confirm {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.confirm-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #1D1D1F;
}

.points-available {
  color: #86868B;
}

.confirm-button {
  background: linear-gradient(135deg, #0A84FF 0%, #007AFF 100%);
  color: white;
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.confirm-button:active {
  transform: scale(0.98);
}

.confirm-button.disabled {
  background: #E5E5EA;
  color: #8E8E93;
  pointer-events: none;
}

.button-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

.check-in-button.loading {
  opacity: 0.8;
}

/* 为了适应深色模式 */
@media (prefers-color-scheme: dark) {
  .check-in-card {
    background: rgba(30, 30, 30, 0.9);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .days-number,
  .points-number {
    color: #FFFFFF;
  }

  .days-text,
  .points-text {
    color: #98989D;
  }
}

.check-in-button:active {
  transform: scale(0.95);
}